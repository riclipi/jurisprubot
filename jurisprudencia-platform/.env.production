# -----------------------------------------------------
# BANCO DE DADOS
# -----------------------------------------------------

# PostgreSQL (Produção)
DATABASE_URL=postgresql://user:password@localhost:5432/jurisprudencia_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jurisprudencia_db
DB_USER=jurisprudencia_user
DB_PASSWORD=

# Pool de conexões
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# -----------------------------------------------------
# CACHE E PERFORMANCE
# -----------------------------------------------------

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL=3600
CACHE_MAX_SIZE_MB=1000

# Elasticsearch (para busca avançada)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USER=
ELASTICSEARCH_PASSWORD=

# -----------------------------------------------------
# ARMAZENAMENTO
# -----------------------------------------------------

# Diretórios de dados
DATA_DIR=/var/lib/jurisprudencia/data
DOWNLOADS_DIR=/var/lib/jurisprudencia/downloads
CACHE_DIR=/var/lib/jurisprudencia/cache
LOGS_DIR=/var/log/jurisprudencia
TEMP_DIR=/tmp/jurisprudencia

# S3 (opcional, para backup)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# -----------------------------------------------------
# CONFIGURAÇÕES DE REDE
# -----------------------------------------------------

# Proxy corporativo (se aplicável)
PROXY_ENABLED=false
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# SSL/TLS
SSL_VERIFY=true
SSL_CERT_STORE=/etc/ssl/certs
MIN_TLS_VERSION=TLSv1.2

# -----------------------------------------------------
# MONITORAMENTO E LOGS
# -----------------------------------------------------

# Nível de log
LOG_LEVEL=INFO

# Sentry (monitoramento de erros)
SENTRY_DSN=

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=

# -----------------------------------------------------
# CONFIGURAÇÕES DA APLICAÇÃO
# -----------------------------------------------------

# Modo de execução
ENVIRONMENT=production
DEBUG=false

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=300

# Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Celery (filas de tarefas)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300

# -----------------------------------------------------
# LIMITES E TIMEOUTS
# -----------------------------------------------------

# Rate limiting global
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Timeouts
DEFAULT_TIMEOUT=300
CONNECTION_TIMEOUT=30
READ_TIMEOUT=300

# Limites de recursos
MAX_WORKERS=10
MAX_CONNECTIONS=100
MAX_MEMORY_MB=4096

# -----------------------------------------------------
# SEGURANÇA ADICIONAL
# -----------------------------------------------------

# IPs permitidos (whitelist)
IP_WHITELIST=

# Tokens de webhook
WEBHOOK_SECRET=

# 2FA
TWO_FACTOR_ENABLED=false
TWO_FACTOR_ISSUER=JurisprudenciaPlatform

# -----------------------------------------------------
# FEATURES FLAGS
# -----------------------------------------------------

# Funcionalidades
FEATURE_AI_ANALYSIS=true
FEATURE_DOCUMENT_GENERATION=true
FEATURE_BULK_DOWNLOAD=true
FEATURE_EXECUTIVE_DASHBOARD=true
FEATURE_MCP_INTEGRATION=true

# -----------------------------------------------------
# CONFIGURAÇÕES DE DEPLOY
# -----------------------------------------------------

# Docker
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# Kubernetes
K8S_NAMESPACE=jurisprudencia
K8S_REPLICA_COUNT=3

